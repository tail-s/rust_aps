use std::io;

fn main() {
    let stdin = io::stdin();
    let mut n = String::new();
    stdin.read_line(&mut n).unwrap();
    let n: usize = n.trim().parse().unwrap();

    for i in 0..n {
        for _ in 0..(n - i - 1) {
            print!(" ");
        }
        for _ in 0..(i + 1) {
            print!("*");
        }
        println!();
    }
}
